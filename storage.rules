rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ───────── 커버 아트 업로드 규칙 ─────────
    match /cover_arts/{userId}/{fileName} {
      // 생성: 인증된 사용자가 자신의 폴더에만 업로드 가능
      allow create: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.size < 10 * 1024 * 1024  // 10MB 제한
                    && request.resource.contentType.matches('image/(png|jpeg|jpg)');  // 이미지만
      
      // 수정/삭제: 업로드한 본인만 가능
      allow update, delete: if request.auth != null 
                            && request.auth.uid == userId;
      
      // 읽기: 모든 사용자 가능 (공개 음원 표지)
      allow read: if true;
    }
    
    // ───────── 기타 모든 파일 (기본 규칙) ─────────
    match /{allPaths=**} {
      // 인증된 사용자만 읽기/쓰기 가능
      allow read, write: if request.auth != null;
    }
  }
}
